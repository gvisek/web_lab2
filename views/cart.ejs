<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trgovina hranom</title>
    <link rel="stylesheet" href="/styles/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    
</head>
<body>
    <div id="navbar" class="navbar">
        <a href="/home">
            <div class="home">
                <img id="slika_home" src="/images/ikone/home.png" alt="home" width="50px" height="50px">
            </div>
        </a>
        
        <h2 id="naslov">Trgovina hranom i pićem</h2>
        <div id="kosara" class="kosara">
            <a href="/cart">
                <img id="slika_kosara"src="/images/ikone/shopping-bag.png" alt="bag_icon" width="50px" height="50px">

            </a>

            <% if(cart.length ===0){%>
                
                <% }else{ %>
                    <div id="cart_amount" class="cart_amount" style="display: block">
                        <%= cart.map((product)=>product.item).reduce((amount, sum)=>sum + amount, 0) %>
                    </div>
                <% } %>
            <img id="slika_search" src="/images/ikone/search.png" alt="search" width="50px" height="50px">
        </div>
        
    </div>

    <div class="shopping_cart">
        <div class="kosarica_cart">
            <h2>Košarica</h2>
        </div>
        <div class="naziv_kolicina">
            <h2 class="naziv">Naziv proizvoda</h2>
            <h2 class="kolicina">Količina</h2>
        </div>
        <div id="cart_items" class="cart_items">
            <% if(cart.length !== 0){ %>
                <% cart.map((product) => { %>
                    <% var ime; %>
                    <% for(let val of data.categories){ %>
                        <% for(let tmp of val.products){ %>
                            <% if(tmp.id === product.id){ %>
                               <% ime = tmp.name; %>
                            <% } %>
                        <% } %>
                    <% } %>
                    <div id=<%= product.id %> class="cart_item">
                        <div class="item_name">
                            <h3><%= ime %></h3>
                        </div>
                        <div class="buttons_amount">
                            <a href="/cart/remove/<%= product.id %>"><img onclick="" id="minus" class="minus" src="/images/ikone/minus.png"></a>
                            <div id="item_amount_cart" class="item_amount_cart"><%= product.item %></div>
                            <a href="/cart/add/<%= product.id %>"><img onclick="" id="plus" class="plus" src="/images/ikone/plus.png"></a>
                        </div>
                    </div>
            <% }) %>
            <% }else{ %>
                <h2>praznooo</h2> 
            <% }; %>
        </div>
    </div>
</body>
</html>