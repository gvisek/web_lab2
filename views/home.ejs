<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trgovina hranom</title>
    <link rel="stylesheet" href="/styles/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    
</head>
<body>
    <div class="wrapper">
        <div id="navbar" class="navbar">
            <a class="home_a" href="/home">
                <div class="home">
                    <img id="slika_home" src="/images/ikone/home.png" alt="home" width="50px" height="50px">
                </div>
            </a>
            <div class="naslov"><h2 id="naslov"><%= name %></h2></div>
            
            <div id="kosara" class="kosara">
                <a href="/cart">
                    <img id="slika_kosara"src="/images/ikone/shopping-bag.png" alt="bag_icon" width="50px" height="50px">

                </a>
                <% if(cart.length ===0){%>
                
                <% }else{ %>
                    <div id="cart_amount" class="cart_amount" style="display: block">
                        <%= cart.map((product)=>product.item).reduce((amount, sum)=>sum + amount, 0) %>
                    </div>
                <% } %>
                <img id="slika_search" src="/images/ikone/search.png" alt="search" width="50px" height="50px">
            </div>
            
        </div>
        
        <div class="wrapper_main" id="wrapper_main">
            <div class="aside_wrapper">
                <div class="aside">
                    <a href="/home/getProducts/3"><button onclick="" id="jela_rostilj" value="jela_rostilj">Jela s roštilja</button></a>
                    <a href="/home/getProducts/7"><button onclick="" id="riba" value="riba">Riba</button></a>
                    <a href="/home/getProducts/5"><button onclick="" id="pizze" value="pizze">Pizze</button></a>
                    <a href="/home/getProducts/6"><button onclick="" id="prilozi" value="prilozi">Prilozi</button></a>
                    <a href="/home/getProducts/8"><button onclick="" id="salate" value="salate">Salate</button></a>
                    <a href="/home/getProducts/2"><button onclick="" id="deserti" value="deserti">Deserti</button></a>
                    <a href="/home/getProducts/1"><button onclick="" id="bezalkoholna_pica" value="bezalkoholna_pica">Bezalkoholna pića</button></a>
                    <a href="/home/getProducts/0"><button onclick="" id="alkoholna_pica" value="alkoholna_pica">Alkoholna pića</button></a>
                    <a href="/home/getProducts/4"><button onclick="" id="pivo" value="pivo">Pivo</button></a>
                    <a href="/home/getProducts/9"><button onclick="" id="topli_napitci" value="topli_napitci">Topli napitci</button></a>
                </div>
                <div class="news">
                    <h3>Kontakt</h3>
                    <h3>Newsletter</h3>
                    <h3>Pretplati se</h3>
                </div>
            </div>
            <div class="pozdravni_tekst_bar">
                <img src="/images/ikone/brick-wall-g5da63c60f_1920.jpg" alt="restoran" width="100%" height="200px">
                <div class="pozdravni_tekst">Dobro došli</div>
            </div>
            <div class="wrapper_unutra">
                
                <div class="main" id="main">
                    <% if(categorie !== undefined){%>

                    
                    <% categorie.products.forEach(x => {%>
                        <% let search = cart.find((product) => product.id === x.id) || [] %>
                        <div class="item">
                            <div class="item_slika">
                                <img src="<%= x.image %>"" alt="" width="200px" height="200px">
                                <a href="/home/add/<%= x.id %>?categoryId=<%= categorie.id %>"><img onclick="" class="shopping_bag" src="/images/ikone/shopping-bag.png" alt="bag_icon" width="50px" height="50px"></a>
                                <div id="<%=x.id%>" class="item_amount" style=<%=search.item === undefined ? "display:none" : "display:block"%>>
                                    <%= (search.item === undefined ? "" : search.item) %>
                                </div>
                            </div>
                            <div class="naziv">
                                <%= x.name %><br/>
                                <%= name %>
                            </div>
                    </div>
                   <% }); %>
                   <%}%>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
